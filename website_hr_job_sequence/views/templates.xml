<odoo>
  <data>
    <template id="hr_detail_sequence" name="Job Detail sequence" inherit_id="website_hr_recruitment.detail">
      <xpath expr="//h5[hasclass('font-weight-light')]" position="before">
        Sequence: <strong t-field="job.sequence_number"/>
      </xpath>

      <xpath expr="//h5[hasclass('font-weight-light')]" position="replace">
        <h5 class="font-weight-light" t-field="job.location"/>
      </xpath>
    </template>
  </data>
</odoo>