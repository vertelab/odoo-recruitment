<odoo>
  <data>
    <template id="added_application_fields" name="added_application_fields" inherit_id="website_hr_recruitment.apply">
      <xpath expr="//div[@class='form-group col-12 s_website_form_field s_website_form_custom']" position="after">
        <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="binary" data-name="Field">
          <div class="row s_col_no_resize s_col_no_bgcolor">
            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="recruitment_letter">
              <span class="s_website_form_label_content">Personal Letter</span>
            </label>
            <div class="col-sm">
              <input id="recruitment_letter" type="file" class="form-control s_website_form_input" name="Resume"/>
            </div>
          </div>
        </div>
      </xpath>
    </template>
  </data>
</odoo>